{# templates/registration/index.html.twig #} {% extends 'admin/navigation.html.twig' %} {%
    block body %}
    {% if 'ROLE_ADMIN' in app.user.roles %}
        <div class="container">
            <table class="table">
                <tr>
                    <th>Почта</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Паспорт</th>
                    <th>Место работы</th>
                    <th>Полис</th>
                    <th>Страховая программа</th>
                    <th>Тип</th>
                    <th>Статус</th>
                    <th>Действие</th>

                </tr>
                {% for medical_cart in medical_carts %}
                    <tr>
                        <td>{{ medical_cart.idUser.username }}</td>
                        <td>{{ medical_cart.name}}</td>
                        <td>{{ medical_cart.surname}}</td>
                        <td>{{ medical_cart.passport}}</td>
                        <td>{{ medical_cart.job}}</td>
                        <td>{{ medical_cart.policy}}</td>
                        <td>{{ medical_cart.insuranceProgram}}</td>
                        <td>{{ medical_cart.type}}</td>
                        <td>{{ medical_cart.status}}</td>
                        {% if medical_cart.status is same as( 'На рассмотрении' ) %}
                            <td><a href="{{ path('admin_medical_cart_edit', {'id_cart': medical_cart.id, 'type': '0'}) }}">Подтвердить</a></td>
                        {% endif %}
                    </tr>

                {% endfor %}

            </table>
        </div>
    {% else %}
        <h1>Only for admins</h1>
    {% endif %}

{% endblock %}