{# templates/registration/index.html.twig #} {% extends 'global/navigation.html.twig' %} {%
    block body %}
    {% if 'ROLE_ADMIN' in app.user.roles  %}
        <div class="container">
            <table class="table">
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Специальность</th>
                    <th>Записи</th>
                    <th>Редактировать</th>
                    <th>Удалить</th>
                </tr>
                {% for doctor in doctors %}
                    <tr>
                        <td>{{ doctor.name }}</td>
                        <td>{{ doctor.surname }}</td>
                        <td>{{ doctor.speciality }}</td>
                        <td>Посмотреть записи</td>
                        <td><a href="{{ path('updateDoctor', {'id': doctor.id}) }}">Редактировать</a></td>
                        <td><a href="{{ path('deleteDoctor', {'id': doctor.id}) }}">Удалить</a></td>
                    </tr>

                {% endfor %}

            </table>
        </div>
    {% else %}
        <h1>Only for admins</h1>
    {% endif %}

{% endblock %}