{# templates/registration/index.html.twig #} {% extends 'admin/navigation.html.twig' %} {%
    block body %}
    {% if 'ROLE_ADMIN' in app.user.roles  %}
        <div class="container">
            <div class="row">
                <div class="col-md-10 ml-md-auto">
                    <div class="card bg-light mb-3 mt-5" style="width: 800px">
                        <div class="card-body">
                            <div class="card-header mb-3">Добавить расписание</div>
                            {{ form_start(form) }}

                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.doctor, {'attr': {'class': 'form-control'}, 'label': 'Врач'}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.date, {'attr': {'class':
                                        'form-control'}, 'label': 'Дата и время'}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.slots, {'attr': {'class':
                                        'form-control'}, 'label': 'Свободные места'}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.cabinet, {'attr': {'class':
                                        'form-control'}, 'label': 'Кабинет'}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-btn fa-user"></i> Добавить
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <h1>Only for admins</h1>
    {% endif %}

{% endblock %}