{% extends 'base.html.twig' %}

{% block title %}Hello ScheduleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table border="1">
        <caption>Расписание</caption>
        <tr>
            <th>имя</th>
            <th>специалист</th>
            <th>дата</th>
            <th>слоты</th>
            <th>кабинет</th>
            <th>Записаться</th>
        </tr>
        {% for row in schedule %}
            <tr>
                <td>{{ row.usernameDoctor }}</td>
                <td>{{ row.role }}</td>
                <td>{{ row.date }}</td>
                <td>{{ row.slots }}</td>
                <td>{{ row.cabinet }}</td>
                <td><a href="{{ path('scheduleItem', {'id': row.id}) }}">dada</a></td>
            </tr>

        {% endfor %}

    </table>
</div>
{% endblock %}
